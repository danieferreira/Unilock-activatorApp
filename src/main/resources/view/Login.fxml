<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane maxHeight="100.0" prefHeight="100.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unilock.activator.controller.LoginController">
   <children>
      <BorderPane maxHeight="100.0" prefHeight="100.0">
         <top>
            <Label fx:id="lblStatus" text="Please supply your username and password" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </top>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <bottom>
                  <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#Login" text="Login" BorderPane.alignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <BorderPane.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </BorderPane.margin></Button>
               </bottom>
               <center>
                  <AnchorPane maxHeight="100.0" prefHeight="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="txtUsername" layoutX="14.0" layoutY="14.0" promptText="Username" />
                        <PasswordField fx:id="txtPassword" layoutX="14.0" layoutY="46.0" promptText="Password" />
                     </children>
                  </AnchorPane>
               </center>
            </BorderPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
